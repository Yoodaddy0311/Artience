# -- Database --
# Cloud SQL (PostgreSQL) via Unix socket
DATABASE_URL=postgresql://dokba_app:CHANGE_ME@/dokba?host=/cloudsql/artitown:asia-northeast3:artitown-db
# Or via TCP (Cloud SQL Auth Proxy)
# DATABASE_URL=postgresql://dokba_app:CHANGE_ME@127.0.0.1:5432/dokba

# -- CORS --
# Comma-separated allowed origins (no wildcard in production)
ALLOWED_ORIGINS=https://artitown.app,https://www.artitown.app

# -- Authentication --
DOKBA_API_KEY=CHANGE_ME
DOKBA_WS_TOKEN=CHANGE_ME

# -- LLM Providers --
ANTHROPIC_API_KEY=CHANGE_ME
GOOGLE_API_KEY=CHANGE_ME

# -- Google Cloud --
GCP_PROJECT=artitown
GCS_BUCKET=artitown-assets
GCS_PUBLIC_URL_PREFIX=https://storage.googleapis.com/artitown-assets
GOOGLE_APPLICATION_CREDENTIALS=/app/credentials/service-account.json

# -- Server --
PORT=8080
GUNICORN_WORKERS=2
