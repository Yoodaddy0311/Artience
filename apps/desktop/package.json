{
    "name": "@dogba/desktop",
    "version": "1.0.0",
    "description": "Dokba Studio - AI Agent Town Desktop App",
    "author": "Artience",
    "main": "dist-electron/main.js",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "preview": "vite preview",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage",
        "electron:dev": "esbuild electron/main.ts electron/preload.ts --outdir=dist-electron --platform=node --format=cjs --bundle --external:electron --external:node-pty --external:electron-store --external:@anthropic-ai/claude-agent-sdk && vite & sleep 3 && electron .",
        "electron:build": "esbuild electron/main.ts electron/preload.ts --outdir=dist-electron --platform=node --format=cjs --bundle --external:electron --external:node-pty --external:electron-store --external:@anthropic-ai/claude-agent-sdk && vite build --mode electron && electron-builder --publish never"
    },
    "build": {
        "appId": "com.artience.dokba",
        "productName": "Dokba Studio",
        "directories": {
            "output": "dist-electron-build"
        },
        "files": [
            "dist/**/*",
            "dist-electron/**/*",
            "node_modules/node-pty/**/*",
            "node_modules/electron-store/**/*",
            "node_modules/conf/**/*",
            "node_modules/atomically/**/*",
            "node_modules/@anthropic-ai/claude-agent-sdk/**/*"
        ],
        "asar": true,
        "asarUnpack": [
            "node_modules/node-pty/**"
        ],
        "npmRebuild": true,
        "forceCodeSigning": false,
        "win": {
            "target": "nsis",
            "icon": "public/icon.ico",
            "signAndEditExecutable": false
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "installerIcon": "public/icon.ico",
            "uninstallerIcon": "public/icon.ico"
        },
        "mac": {
            "target": "dmg",
            "icon": "public/favicon.png"
        }
    },
    "dependencies": {
        "@anthropic-ai/claude-agent-sdk": "^0.2.63",
        "@xterm/addon-fit": "^0.11.0",
        "@xterm/xterm": "^6.0.0",
        "electron-store": "^11.0.2",
        "lucide-react": "^0.575.0",
        "node-pty": "^1.0.0",
        "pixi.js": "^8.0.0",
        "react": "^19.0.0",
        "react-dom": "^19.0.0",
        "zustand": "^4.5.0"
    },
    "devDependencies": {
        "@tailwindcss/vite": "^4.2.1",
        "@testing-library/jest-dom": "^6.9.1",
        "@testing-library/react": "^16.3.2",
        "@testing-library/user-event": "^14.6.1",
        "@types/react": "^19.0.0",
        "@types/react-dom": "^19.0.0",
        "@vitejs/plugin-react": "^5.1.4",
        "@vitest/coverage-v8": "^4.0.18",
        "electron": "^35.7.5",
        "electron-builder": "^26.8.1",
        "esbuild": "^0.27.3",
        "jsdom": "^28.1.0",
        "tailwindcss": "^4.0.0",
        "typescript": "^5.3.3",
        "vite": "^6.4.1",
        "vitest": "^4.0.18"
    }
}