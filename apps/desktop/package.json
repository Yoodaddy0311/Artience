{
    "name": "@dogba/desktop",
    "version": "1.0.0",
    "main": "dist-electron/main.js",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "preview": "vite preview",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage",
        "electron:dev": "vite & sleep 3 && electron .",
        "electron:build": "vite build && electron-builder --publish never"
    },
    "build": {
        "appId": "com.artience.dokba",
        "productName": "Dokba Studio",
        "directories": {
            "output": "dist-electron-build"
        },
        "files": [
            "dist/**/*",
            "dist-electron/**/*"
        ],
        "win": {
            "target": "nsis",
            "icon": "public/favicon.png"
        },
        "mac": {
            "target": "dmg",
            "icon": "public/favicon.png"
        }
    },
    "dependencies": {
        "lucide-react": "^0.575.0",
        "pixi.js": "^8.0.0",
        "react": "^19.0.0",
        "react-dom": "^19.0.0",
        "zustand": "^4.5.0"
    },
    "devDependencies": {
        "@tailwindcss/vite": "^4.2.1",
        "@testing-library/jest-dom": "^6.9.1",
        "@testing-library/react": "^16.3.2",
        "@testing-library/user-event": "^14.6.1",
        "@types/react": "^19.0.0",
        "@types/react-dom": "^19.0.0",
        "@vitejs/plugin-react": "^5.1.4",
        "@vitest/coverage-v8": "^4.0.18",
        "electron": "^35.7.5",
        "electron-builder": "^26.8.1",
        "jsdom": "^28.1.0",
        "tailwindcss": "^4.0.0",
        "typescript": "^5.3.3",
        "vite": "^6.4.1",
        "vitest": "^4.0.18"
    }
}